{
  "name": "aws-compute-manager",
  "version": "1.0.0",
  "description": "A simple macOS app to start and stop AWS EC2 instances",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-windows": "electron-builder --win",
    "build-all": "electron-builder --mac --win",
    "install-deps": "npm install"
  },
  "keywords": [
    "aws",
    "ec2",
    "electron",
    "macos"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.423.0",
    "@aws-sdk/client-cloudwatch": "^3.423.0"
  },
  "build": {
    "appId": "com.yourcompany.aws-compute-manager",
    "productName": "AWS Compute Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "identity": null,
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  }
}
